# Environment
NODE_ENV=development

# Server
PORT=3000

# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/mumin_api?schema=public"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Security
ADMIN_API_KEY="your_super_secret_admin_key_min_32_chars_CHANGE_THIS"

# JWT (для httpOnly cookies)
JWT_SECRET="your_super_secret_jwt_key_change_this_in_production_min_32_chars"
JWT_REFRESH_SECRET="your_super_secret_refresh_key_change_this_in_production_min_32_chars"

# API Configuration
API_VERSION="1.0.0"
ALLOWED_ORIGINS="*"

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Email
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_123456789
SENDGRID_API_KEY=
FROM_EMAIL=noreply@mumin.ink
EMAIL_FROM_ADDRESS="noreply@mumin.ink"
EMAIL_FROM_NAME="Mumin Hadith API"

# App URLs (для CORS)
APP_URL="http://localhost:3000"
DASHBOARD_URL="http://localhost:3001"
DOCS_URL="http://localhost:3002"

# Legal
TERMS_VERSION="2.0"
PRIVACY_POLICY_VERSION="1.0"

# Data Retention
LOG_RETENTION_DAYS=90

# Logging
LOG_LEVEL="info"
